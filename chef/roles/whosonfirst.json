{
  "name": "whosonfirst",
  "description": "configure repository and dependencies",
  "json_class": "Chef::Role",
  "chef_type": "role",
  "run_list": [
    "recipe[custom::directory]",
    "recipe[custom::repository]",
    "recipe[custom::npm]"
  ],
  "override_attributes": {
    "directory": [{
      "path": "/home/pelias/repos",
      "recursive": true,
      "owner": "pelias",
      "group": "pelias",
      "mode": "0755"
    }],
    "repository": [{
      "repository": "https://github.com/pelias/whosonfirst.git",
      "remote": "origin",
      "revision": "master",
      "destination": "/home/pelias/repos/whosonfirst",
      "user": "pelias",
      "group": "pelias"
    }],
    "npm": [{
      "command": "install --production",
      "cwd": "/home/pelias/repos/whosonfirst",
      "user": "pelias",
      "group": "pelias"
    }]
  }
}
